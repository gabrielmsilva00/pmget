#!/usr/bin/env bash
# pget - Package Getter (https://github.com/gabrielmsilva00/pget)

VERSION="1.0.3"

BOLD=$(tput bold 2>/dev/null) || BOLD=""
RESET=$(tput sgr0 2>/dev/null) || RESET=""
RED=$(tput setaf 1 2>/dev/null) || RED=""
GREEN=$(tput setaf 2 2>/dev/null) || GREEN=""
YELLOW=$(tput setaf 3 2>/dev/null) || YELLOW=""
CYAN=$(tput setaf 6 2>/dev/null) || CYAN=""

CLI_MODE=false
USE_SUDO=false
declare -a INSTALL_PKGS=()
declare -a REMOVE_PKGS=()
DETECTED_PM=""
PKG_FILE=""
STATE_FILE=""

cleanup() {
    tput cnorm 2>/dev/null || true
    [[ -f "${PKG_FILE:-}" ]] && rm -f "$PKG_FILE"
    [[ -f "${STATE_FILE:-}" ]] && rm -f "$STATE_FILE"
}
trap cleanup EXIT INT

detect_pm() {
    for pm in pkg nala apt dnf yum pacman zypper apk; do
        command -v "$pm" &>/dev/null && { DETECTED_PM="$pm"; return 0; }
    done
    echo "${RED}No package manager found${RESET}" >&2; exit 1
}

run_pm() {
    local action="$1"; shift; local cmd=()
    [[ "$USE_SUDO" == true ]] && cmd+=(sudo)
    case "$DETECTED_PM:$action" in
        pkg:install)    cmd+=(pkg install -y "$@") ;;
        pkg:remove)     cmd+=(pkg uninstall -y "$@") ;;
        nala:install)   cmd+=(nala install -y "$@") ;;
        nala:remove)    cmd+=(nala remove -y "$@") ;;
        apt:install)    cmd+=(apt install -y "$@") ;;
        apt:remove)     cmd+=(apt remove -y "$@") ;;
        dnf:install)    cmd+=(dnf install -y "$@") ;;
        dnf:remove)     cmd+=(dnf remove -y "$@") ;;
        yum:install)    cmd+=(yum install -y "$@") ;;
        yum:remove)     cmd+=(yum remove -y "$@") ;;
        pacman:install) cmd+=(pacman -S --noconfirm "$@") ;;
        pacman:remove)  cmd+=(pacman -R --noconfirm "$@") ;;
        zypper:install) cmd+=(zypper install -y "$@") ;;
        zypper:remove)  cmd+=(zypper remove -y "$@") ;;
        apk:install)    cmd+=(apk add "$@") ;;
        apk:remove)     cmd+=(apk del "$@") ;;
    esac
    "${cmd[@]}"
}

fetch_packages() {
    case "$DETECTED_PM" in
        pkg)      pkg list-all 2>/dev/null | grep -v '^Listing' | cut -d/ -f1 ;;
        nala|apt) apt-cache pkgnames 2>/dev/null ;;
        dnf)      dnf repoquery --qf '%{name}' 2>/dev/null ;;
        yum)      yum list available 2>/dev/null | awk 'NR>1{print $1}' | cut -d. -f1 ;;
        pacman)   pacman -Slq 2>/dev/null ;;
        zypper)   zypper packages 2>/dev/null | awk -F'|' 'NR>4{gsub(/ /,"",$3);print $3}' ;;
        apk)      apk search -q 2>/dev/null ;;
    esac
}

show_info() {
    echo -e "${BOLD}${CYAN}Info:${RESET}\n"
    case "$DETECTED_PM" in
        pkg)    pkg show "$1" 2>/dev/null ;;
        nala)   nala show "$1" 2>/dev/null ;;
        apt)    apt show "$1" 2>/dev/null ;;
        dnf)    dnf info "$1" 2>/dev/null ;;
        yum)    yum info "$1" 2>/dev/null ;;
        pacman) pacman -Si "$1" 2>/dev/null || pacman -Qi "$1" 2>/dev/null ;;
        zypper) zypper info "$1" 2>/dev/null ;;
        apk)    apk info -a "$1" 2>/dev/null ;;
    esac
}

parse_args() {
    local mode=""
    while [[ $# -gt 0 ]]; do
        case "$1" in
            -c) CLI_MODE=true ;;
            -s) USE_SUDO=true ;;
            -i) mode="i" ;;
            -r) mode="r" ;;
            -v) echo "pget v${VERSION}"; exit 0 ;;
            -h) echo "pget v${VERSION} | -c -s -i -r"; exit 0 ;;
            --info) detect_pm; show_info "$2"; exit 0 ;;
            *) [[ "$mode" == "i" ]] && INSTALL_PKGS+=("$1"); [[ "$mode" == "r" ]] && REMOVE_PKGS+=("$1") ;;
        esac
        shift
    done
}

run_cli() {
    echo "${BOLD}${CYAN}pget${RESET} ($DETECTED_PM)$([[ "$USE_SUDO" == true ]] && echo " [sudo]")"
    [[ ${#REMOVE_PKGS[@]} -gt 0 ]] && { echo "${RED}Remove:${RESET} ${REMOVE_PKGS[*]}"; run_pm remove "${REMOVE_PKGS[@]}" || true; }
    [[ ${#INSTALL_PKGS[@]} -gt 0 ]] && { echo "${GREEN}Install:${RESET} ${INSTALL_PKGS[*]}"; run_pm install "${INSTALL_PKGS[@]}" || true; }
}

get_state() { grep "^$1=" "$STATE_FILE" 2>/dev/null | cut -d= -f2 || echo 0; }
set_state() { grep -v "^$1=" "$STATE_FILE" > "$STATE_FILE.tmp" 2>/dev/null || true; mv "$STATE_FILE.tmp" "$STATE_FILE"; echo "$1=$2" >> "$STATE_FILE"; }

gen_list() {
    while IFS= read -r pkg; do
        [[ -z "$pkg" ]] && continue
        local s=$(get_state "$pkg")
        case "$s" in
            1) printf "${GREEN}[+]${RESET} %s\n" "$pkg" ;;
            2) printf "${RED}[-]${RESET} %s\n" "$pkg" ;;
            *) printf "[ ] %s\n" "$pkg" ;;
        esac
    done < "$PKG_FILE"
}

run_tui() {
    PKG_FILE=$(mktemp)
    STATE_FILE=$(mktemp)
    
    echo -n "${CYAN}Loading...${RESET} "
    fetch_packages > "$PKG_FILE"
    
    if [[ ! -s "$PKG_FILE" ]]; then
        echo "${RED}Failed${RESET}"
        echo "Try: ${DETECTED_PM} update"
        exit 1
    fi
    echo "${GREEN}OK${RESET} ($(wc -l < "$PKG_FILE") packages)"
    
    local query=""
    while true; do
        tput civis 2>/dev/null || true
        
        local sudo_ind="off"; [[ "$USE_SUDO" == true ]] && sudo_ind="${GREEN}ON${RESET}"
        
        local result
        result=$(gen_list | fzf --ansi --no-multi \
            --query="$query" \
            --prompt="pget: " \
            --header="Enter=sel/exec ←→=cycle s=sudo($sudo_ind) Esc=quit" \
            --preview="$0 --info {2}" \
            --preview-window="top:40%" \
            --expect="enter,right,left,s" \
            --print-query \
            --layout=reverse \
            --info=inline </dev/tty 2>/dev/tty) || true
        
        tput cnorm 2>/dev/null || true
        
        local q=$(sed -n '1p' <<< "$result")
        local key=$(sed -n '2p' <<< "$result")
        local line=$(sed -n '3p' <<< "$result")
        local pkg=$(awk '{print $2}' <<< "$line")
        query="$q"
        
        # Exit on Esc
        [[ -z "$key" && -z "$line" ]] && { echo "${CYAN}Exit${RESET}"; break; }
        
        case "$key" in
            s)
                USE_SUDO=$([[ "$USE_SUDO" == true ]] && echo false || echo true)
                ;;
            right)
                [[ -n "$pkg" ]] && set_state "$pkg" $(( ($(get_state "$pkg") + 1) % 3 ))
                ;;
            left)
                [[ -n "$pkg" ]] && set_state "$pkg" $(( ($(get_state "$pkg") + 2) % 3 ))
                ;;
            enter)
                [[ -z "$pkg" ]] && continue
                local s=$(get_state "$pkg")
                if [[ "$s" == "0" ]]; then
                    set_state "$pkg" 1
                else
                    # Execute all
                    local inst=$(grep '=1$' "$STATE_FILE" 2>/dev/null | cut -d= -f1 | tr '\n' ' ')
                    local rem=$(grep '=2$' "$STATE_FILE" 2>/dev/null | cut -d= -f1 | tr '\n' ' ')
                    
                    [[ -z "$inst" && -z "$rem" ]] && continue
                    
                    echo
                    [[ -n "$inst" ]] && echo "${GREEN}Install:${RESET} $inst"
                    [[ -n "$rem" ]] && echo "${RED}Remove:${RESET} $rem"
                    echo
                    
                    local cmd="pget -c"
                    [[ "$USE_SUDO" == true ]] && cmd+=" -s"
                    [[ -n "$inst" ]] && cmd+=" -i $inst"
                    [[ -n "$rem" ]] && cmd+=" -r $rem"
                    
                    echo "${CYAN}> $cmd${RESET}"
                    eval "$cmd"
                    break
                fi
                ;;
        esac
    done
}

main() {
    parse_args "$@"
    detect_pm
    [[ "$CLI_MODE" == true ]] && run_cli || run_tui
}

main "$@"
